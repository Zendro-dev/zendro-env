{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "extends": [
    "plugin:jest/recommended"
  ],
  "plugins": [
    "jest"
  ],
  "rules": {

    "indent": [ "warn", 2 ],

    "linebreak-style": [ "error", "unix" ],

    "no-unused-vars": "off",

    "quotes": [ "warn", "single" ],

    "semi": [ "error", "always" ]

  },
  "ignorePatterns": [
    "coverage",
    "node_modules"
  ]
}